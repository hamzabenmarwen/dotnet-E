<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hamza Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 modern-navbar">
            <div class="container-fluid">
                <a class="navbar-brand brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store me-2"></i>Hamza Shop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <!-- Menu Toggle Button -->
                        <li class="nav-item me-2">
                            <button class="btn btn-menu" id="toggleMenu">
                                <i class="fas fa-bars"></i>
                            </button>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-box me-1"></i>Produits
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Category" asp-action="Index">
                                <i class="fas fa-layer-group me-1"></i>Catégories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern position-relative" asp-controller="Panier" asp-action="Index">
                                <i class="fas fa-shopping-cart me-1"></i>Panier
                                @await Component.InvokeAsync("Cart")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern position-relative" asp-controller="Wishlist" asp-action="Index">
                                <i class="fas fa-heart me-1"></i>Souhaits
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Confidentialité
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-modern nav-link-admin" href="@Url.Action("Dashboard", "Admin")">
                                    <i class="fas fa-tachometer-alt me-1"></i>Tableau de Bord
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Search Form -->
                    <form class="d-flex me-3 search-form" asp-area="" asp-controller="Product" asp-action="Search">
                        <div class="input-group">
                            <input class="form-control search-input" type="search" placeholder="Rechercher..." name="val">
                            <button class="btn btn-search" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Authentication Links -->
                    <ul class="navbar-nav align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-dropdown" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-user me-2"></i>Mon Profil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Panier" asp-action="Index">
                                            <i class="fas fa-shopping-bag me-2"></i>Mes Commandes
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-auth me-2" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Inscription
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-auth" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Connexion
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Modified container with sidebar and main content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar for categories -->
            <div class="col-lg-2 sidebar-container" id="sidebar">
                <div class="sidebar-content">
                    <div class="sidebar-header">
                        <h5><i class="fas fa-list me-2"></i>Catégories</h5>
                        <button class="btn-close-sidebar" id="closeSidebar">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <ul class="list-group category-list">
                        @await Html.PartialAsync("_CategoriesMenu", ViewData["Categories"])
                    </ul>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-lg-12 main-content-wrapper" id="mainContent">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="modern-footer">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-4 mb-3">
                    <h5 class="footer-title">
                        <i class="fas fa-store me-2"></i>Biblio Shop
                    </h5>
                    <p class="footer-text">Votre boutique en ligne de confiance pour tous vos besoins.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="footer-subtitle">Liens Rapides</h6>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                        <li><a asp-controller="Product" asp-action="Index">Produits</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Confidentialité</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="footer-subtitle">Contactez-nous</h6>
                    <div class="footer-contact">
                        <p><i class="fas fa-envelope me-2"></i>contact@biblioshop.com</p>
                        <p><i class="fas fa-phone me-2"></i>+216 XX XXX XXX</p>
                    </div>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="text-center footer-bottom">
                <p>&copy; 2025 Biblio Shop. Tous droits réservés.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CustomScript.js"></script>
    <script src="~/js/wishlist.js"></script>

    <script>
        // Enhanced sidebar toggle with smooth animation
        $(document).ready(function() {
            $('#toggleMenu, #closeSidebar').on('click', function() {
                $('#sidebar').toggleClass('sidebar-open');
                $('#mainContent').toggleClass('content-shifted');
                $('body').toggleClass('sidebar-active');
            });

            // Close sidebar when clicking outside
            $(document).on('click', function(e) {
                if ($('#sidebar').hasClass('sidebar-open') &&
                    !$(e.target).closest('#sidebar, #toggleMenu').length) {
                    $('#sidebar').removeClass('sidebar-open');
                    $('#mainContent').removeClass('content-shifted');
                    $('body').removeClass('sidebar-active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>