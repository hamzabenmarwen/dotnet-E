@{
    ViewBag.Title = "Mon Panier";
}
<link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <h2 class="section-title mb-4 text-center">🛒 Mon Panier</h2>

    @if (ViewBag.Liste.Count > 0)
    {
        <div class="card p-4 shadow-sm modern-card">

            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th><h5 class="fw-bold">Produit</h5></th>
                        <th><h5 class="fw-bold">Description</h5></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in ViewBag.Liste)
                    {
                        <tr id="row-@item.Prod.ProductId" class="modern-row">
                            <td class="text-center">
                                <img src="~/images/@item.Prod.Image"
                                     class="rounded shadow product-img"
                                     alt="@item.Prod.Name" />
                            </td>

                            <td>
                                <h5>Nom : <strong>@item.Prod.Name</strong></h5>
                                <hr />

                                <h5>Catégorie : <strong>@item.Prod.Category.CategoryName</strong></h5>
                                <hr />

                                <h5>
                                    Quantité :
                                    <span id="quantite_@item.Prod.ProductId" class="fw-bold">
                                        @item.quantite
                                    </span>
                                </h5>
                                <hr />

                                <div class="d-flex gap-3 mb-3">
                                    <a href="#" class="PlusProducts action-btn" data-id="@item.Prod.ProductId">
                                        <img src="~/images/add.png" class="icon-action" />
                                    </a>

                                    <a href="#" class="MinProducts action-btn" data-id="@item.Prod.ProductId">
                                        <img src="~/images/moin.png" class="icon-action" />
                                    </a>

                                    <a href="#" class="RemoveLink action-btn" data-id="@item.Prod.ProductId">
                                        <img src="~/images/delet.png" class="icon-action" />
                                    </a>
                                </div>

                                <div class="price-box p-3 rounded mt-3">
                                    <h5 class="mb-0">
                                        Prix de
                                        <span id="rquantite_@item.Prod.ProductId" class="fw-bold">@item.quantite</span>
                                        article(s):
                                        <span id="total_@item.Prod.ProductId" class="fw-bold text-primary">
                                            @item.TotalPrice
                                        </span>
                                    </h5>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-4">
                <h4 class="fw-bold">
                    Total à payer :
                    <span class="text-success">@ViewBag.total</span>
                </h4>
            </div>

            @if (ViewBag.total > 0)
            {
                <div class="d-flex justify-content-between mt-4">
                    <a href="~/Product/Index" class="btn btn-outline-secondary btn-animated">← Continuer shopping</a>
                    <a href="~/Panier/Checkout" class="btn btn-success btn-animated">Commander ➜</a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5 empty-cart-block fade-in">

            <img src="~/images/panier_vide.png"
                 alt="Panier vide"
                 class="empty-cart-img" />

            <h3 class="mt-3 text-muted">Votre panier est vide !</h3>
            <p class="text-muted">Découvrez nos meilleurs produits</p>

            <a href="~/Product/Index" class="btn btn-primary btn-animated mt-3">
                Voir les produits
            </a>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Monscript.js"></script>
