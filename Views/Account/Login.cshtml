@model TP2.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* Fade + Slide Animation */

        opacity: 0;
        transform: translateY(30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .auth-card {
        animation: fadeSlide 0.7s ease forwards;
        border-radius: 18px;
        backdrop-filter: blur(5px);
        transition: box-shadow 0.3s ease;
    }

        .auth-card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    /* Animated Inputs */
    .form-control {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(13,110,253,0.2);
            transform: scale(1.02);
        }

    /* Animated Button */
    .btn-animated {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-animated:hover {
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

    /* Icon Fade */
    .auth-icon {
        animation: fadeSlide 0.9s ease;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-4 auth-card" style="width: 400px;">

        <div class="text-center mb-4">
            <i class="fas fa-user-circle fa-4x text-primary auth-icon"></i>
            <h2 class="mt-3 fw-bold">Welcome Back</h2>
            <p class="text-muted">Login to continue</p>
        </div>

        @{
            var returnUrl = Context.Request.Query["ReturnUrl"];
        }

        <form method="post" asp-route-returnurl="@returnUrl">

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold btn-animated">
                <i class="fas fa-sign-in-alt me-2"></i> Login
            </button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Register" class="text-decoration-none">
                    Don’t have an account? <b>Register</b>
                </a>
            </div>

        </form>
    </div>
</div>
