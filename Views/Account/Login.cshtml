@model TP2.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Connexion";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />

<div class="auth-container">
    <div class="card auth-card">
        <div class="auth-header">
            <i class="fas fa-user-circle fa-4x auth-icon login"></i>
            <h2>Bienvenue</h2>
            <p>Connectez-vous pour continuer vos achats</p>
        </div>

        @{
            var returnUrl = Context.Request.Query["ReturnUrl"];
        }

        <form method="post" asp-route-returnurl="@returnUrl" class="auth-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Adresse Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="votre@email.com" autocomplete="email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" placeholder="Entrez votre mot de passe" autocomplete="current-password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">
                    Se souvenir de moi
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-animated">
                <i class="fas fa-sign-in-alt me-2"></i> Se connecter
            </button>

            <div class="auth-footer">
                <a asp-controller="Account" asp-action="Register">
                    Vous n'avez pas de compte ? <b>Inscrivez-vous ici</b>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}