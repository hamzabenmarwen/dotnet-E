@model TP2.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>

        opacity: 0;
        transform: translateY(30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .auth-card {
        animation: fadeSlide 0.7s ease forwards;
        border-radius: 18px;
        backdrop-filter: blur(5px);
        transition: box-shadow 0.3s ease;
    }

        .auth-card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .form-control {
        transition: 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(25,135,84,0.2);
            transform: scale(1.02);
        }

    .btn-animated:hover {
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-4 auth-card" style="width: 450px;">

        <div class="text-center mb-4">
            <i class="fas fa-user-plus fa-4x text-success"></i>
            <h2 class="mt-3 fw-bold">Create Account</h2>
            <p class="text-muted">Join us and start shopping today</p>
        </div>

        <form method="post">

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2 fw-bold btn-animated">
                <i class="fas fa-user-check me-2"></i> Register
            </button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none">
                    Already have an account? <b>Login</b>
                </a>
            </div>

        </form>
    </div>
</div>
