@model TP2.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Inscription";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />

<div class="auth-container">
    <div class="card auth-card">
        <div class="auth-header">
            <!-- Même icône bleue que le Login -->
            <i class="fas fa-user-circle fa-4x auth-icon login"></i>
            <h2>Inscription</h2>
            <p>Créez votre compte et commencez vos achats</p>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Adresse Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="votre@email.com" autocomplete="email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" placeholder="Choisissez un mot de passe sécurisé" autocomplete="new-password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Répétez votre mot de passe" autocomplete="new-password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Bouton en bleu primaire comme le Login -->
            <button type="submit" class="btn btn-primary btn-animated">
                <i class="fas fa-user-plus me-2"></i> Créer mon compte
            </button>

            <div class="auth-footer">
                <a asp-controller="Account" asp-action="Login">
                    Déjà un compte ? <b>Connectez-vous ici</b>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}