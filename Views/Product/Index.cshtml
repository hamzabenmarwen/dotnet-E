@model IEnumerable<TP2.Models.Product>
@{
    ViewData["Title"] = "Liste des produits";
}

<!-- Add FontAwesome CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .heart-btn {
        border: none;
        background: transparent !important;
        cursor: pointer;
        font-size: 1.5rem;
        width: 30px;
        height: 30px;
        display: flex !important;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
    }

        .heart-btn:hover {
            transform: scale(1.2);
        }

    .fa-heart {
        display: inline-block !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h1 class="display-4">Liste des produits</h1>
            <hr />
            <a asp-action="Create" class="btn btn-success mb-3">
                Créer un nouveau produit
            </a>
            <a href="@Url.Action("Index", "Wishlist")" class="btn btn-outline-danger mb-3 ml-2">
                <i class="fas fa-heart"></i> Voir ma liste de souhaits
            </a>
        </div>
    </div>

    <div class="card-group">
        @foreach (var product in Model)
        {
            var photoPath = "~/images/" + (product.Image ?? "noimage.jpg");
            var isInWishlist = product.IsInWishlist;

            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-start">
                        <div style="flex: 1;">
                            <h5><b>Nom : </b> @product.Name</h5>
                            <h5><b>Prix : </b>@product.Price DT</h5>
                            <h5><b>Quantité : </b> @product.QteStock</h5>
                            <h5><b>Catégorie : </b>@product.Category?.CategoryName</h5>
                        </div>
                        <!-- Heart Button -->
                        <button class="btn btn-link p-0 heart-btn @(isInWishlist ? "active" : "")"
                                data-product-id="@product.ProductId"
                                onclick="toggleWishlist(this)">
                            <i class="fas fa-heart @(isInWishlist ? "text-danger" : "text-muted")"
                               style="font-size: 1.5rem;"></i>
                        </button>
                    </div>
                </div>

                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"
                     style="height: 200px; object-fit: cover;" />

                <div class="card-footer text-center">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                       class="btn btn-primary m-1">View</a>
                    <a asp-controller="Panier" asp-action="AddProduct" class="btn btn-outline-secondary"
                       asp-route-id="@product.ProductId">Ajouter Au Panier</a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
<div class="pagination mt-4">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a asp-action="Index" asp-route-categoryId="@ViewBag.CategoryId"
           asp-route-page="@i" class="btn btn-outline-secondary m-1">
            @i
        </a>
    }
</div>

@section Scripts {
    <script>
        function toggleWishlist(button) {
            const productId = button.getAttribute('data-product-id');
            const heartIcon = button.querySelector('.fa-heart');

            console.log('Toggling wishlist for product:', productId);

            // Toggle visual state immediately for better UX
            const isActive = heartIcon.classList.contains('text-danger');

            if (isActive) {
                heartIcon.classList.remove('text-danger');
                heartIcon.classList.add('text-muted');
            } else {
                heartIcon.classList.remove('text-muted');
                heartIcon.classList.add('text-danger');
            }

            button.classList.toggle('active');

            // Send AJAX request to server
            fetch('/Wishlist/ToggleWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId: parseInt(productId) })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (!data.success) {
                    // Revert visual state if failed
                    if (isActive) {
                        heartIcon.classList.add('text-danger');
                        heartIcon.classList.remove('text-muted');
                    } else {
                        heartIcon.classList.remove('text-danger');
                        heartIcon.classList.add('text-muted');
                    }
                    button.classList.toggle('active');
                    console.error('Error:', data.message);
                } else {
                    console.log('Success:', data);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Revert visual state
                if (isActive) {
                    heartIcon.classList.add('text-danger');
                    heartIcon.classList.remove('text-muted');
                } else {
                    heartIcon.classList.remove('text-danger');
                    heartIcon.classList.add('text-muted');
                }
                button.classList.toggle('active');
                alert('Erreur de connexion. Veuillez réessayer.');
            });
        }

        // Debug: Check if buttons are loaded
        document.addEventListener('DOMContentLoaded', function() {
            const heartButtons = document.querySelectorAll('.heart-btn');
            console.log('Heart buttons loaded:', heartButtons.length);
        });
    </script>
}