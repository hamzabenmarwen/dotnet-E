@model IEnumerable<TP2.Models.Product>
@{
    ViewData["Title"] = "Liste des produits";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />

<style>
    /* Beautiful & visible wishlist heart - works everywhere */
    .wishlist-heart-btn {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        transition: all 0.25s ease;
        z-index: 10;
        backdrop-filter: blur(4px);
    }

        .wishlist-heart-btn i {
            font-size: 1.4rem;
            color: #ccc;
            transition: all 0.25s ease;
        }

        .wishlist-heart-btn.active {
            background: #e74c3c;
            transform: scale(1.1);
        }

            .wishlist-heart-btn.active i {
                color: white !important;
            }

        .wishlist-heart-btn:hover {
            transform: scale(1.15);
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.4);
        }

        .wishlist-heart-btn:not(.active) i {
            color: #999;
        }

        .wishlist-heart-btn:not(.active):hover i {
            color: #e74c3c;
        }
</style>

<div class="container mt-4">

    <!-- Page Header -->
    <div class="page-header mb-4">
        <h1 class="section-title">
            <i class="fas fa-boxes-stacked me-2"></i>Liste des produits
        </h1>
        <p class="text-muted">Parcourez et gérez tous les produits disponibles</p>
    </div>

    <!-- Action Buttons -->
    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary btn-modern me-3">
            <i class="fas fa-plus me-2"></i>Créer un nouveau produit
        </a>
        <a asp-action="Index" asp-controller="Wishlist" class="btn btn-outline-danger btn-modern">
            <i class="fas fa-heart me-2"></i>Voir ma liste de souhaits
        </a>
    </div>

    <!-- Products Grid -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                var photoPath = "~/images/" + (product.Image ?? "noimage.jpg");
                var isInWishlist = product.IsInWishlist;

                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="card modern-card h-100 shadow-sm overflow-hidden">

                        <!-- Image + Heart Button -->
                        <div class="position-relative">
                            <img src="@photoPath" asp-append-version="true"
                                 class="card-img-top"
                                 alt="@product.Name"
                                 style="height: 220px; object-fit: cover;">

                            <!-- PERFECT HEART BUTTON -->
                            <button type="button"
                                    class="position-absolute top-0 end-0 m-3 wishlist-heart-btn @(isInWishlist ? "active" : "")"
                                    data-product-id="@product.ProductId"
                                    onclick="toggleWishlist(this)"
                                    title="@(isInWishlist ? "Retirer des favoris" : "Ajouter aux favoris")">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-2">@product.Name</h5>
                            <p class="text-primary fs-4 fw-semibold mb-1">@product.Price DT</p>

                            <p class="text-muted mb-2">
                                <i class="fas fa-cubes me-1"></i>@product.QteStock en stock
                            </p>

                            @if (product.Category != null)
                            {
                                <p class="text-muted small">
                                    <i class="fas fa-tag me-1"></i>@product.Category.CategoryName
                                </p>
                            }

                            <div class="mt-auto pt-3">
                                <div class="d-grid gap-2 d-md-flex justify-content-between">
                                    <a asp-controller="Product" asp-action="Details"
                                       asp-route-id="@product.ProductId"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>Voir
                                    </a>
                                    <a asp-controller="Panier" asp-action="AddProduct"
                                       asp-route-id="@product.ProductId"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-cart-plus me-1"></i>Ajouter au panier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Pagination" class="mt-5">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-categoryId="@ViewBag.CategoryId"
                               asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-4"></i>
            <h3>Aucun produit trouvé</h3>
            <p class="text-muted">Il n'y a actuellement aucun produit dans cette catégorie.</p>
            <a asp-action="Create" class="btn btn-primary btn-modern mt-3">
                <i class="fas fa-plus me-2"></i>Ajouter le premier produit
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleWishlist(button) {
            const productId = button.getAttribute('data-product-id');
            const icon = button.querySelector('i');

            // Optimistic toggle
            const willBeActive = !button.classList.contains('active');
            button.classList.toggle('active');

            fetch('/Wishlist/ToggleWishlist', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId: parseInt(productId) })
            })
            .then(r => r.json())
            .then(data => {
                if (!data.success) {
                    button.classList.toggle('active'); // revert
                    alert(data.message || "Erreur lors de la mise à jour de la liste de souhaits");
                }
            })
            .catch(err => {
                button.classList.toggle('active'); // revert
                alert("Erreur de connexion. Réessayez.");
            });
        }
    </script>
}