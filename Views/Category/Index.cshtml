@model IEnumerable<TP2.Models.Category>
@{
    ViewData["Title"] = "Catégories";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <h1 class="section-title">
            <i class="fas fa-layer-group me-2"></i>Catégories
        </h1>
        <p class="text-muted">Gérez les catégories de vos produits</p>
    </div>

    <!-- Action Button -->
    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary btn-modern">
            <i class="fas fa-plus me-2"></i>Créer une nouvelle catégorie
        </a>
    </div>

    <!-- Categories Table -->
    <div class="modern-table-container">
        @if (Model.Any())
        {
            <table class="table modern-table">
                <thead>
                    <tr>
                        <th>
                            <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th class="text-end">
                            <i class="fas fa-cog me-2"></i>Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.CategoryId"
                                   class="btn btn-sm btn-info me-2" title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId"
                                   class="btn btn-sm btn-warning me-2" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId"
                                   class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-folder-open"></i>
                <h3>Aucune catégorie trouvée</h3>
                <p>Commencez par créer votre première catégorie</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="fas fa-plus me-2"></i>Créer une catégorie
                </a>
            </div>
        }
    </div>
</div>