@model IEnumerable<TP2.Models.Product>
@{
    ViewData["Title"] = "Ma Liste de Souhaits";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/auth-home.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <h1 class="section-title">
            <i class="fas fa-heart me-2 text-danger"></i>Ma Liste de Souhaits
        </h1>
        <p class="text-muted">Retrouvez tous vos produits favoris</p>
    </div>

    <!-- Back Button -->
    <div class="mb-4">
        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary btn-modern">
            <i class="fas fa-arrow-left me-2"></i>Retour aux produits
        </a>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty Wishlist State -->
        <div class="empty-state">
            <i class="fas fa-heart-broken"></i>
            <h3>Votre liste de souhaits est vide</h3>
            <p>Ajoutez des produits à votre liste en cliquant sur le cœur</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary mt-3">
                <i class="fas fa-shopping-bag me-2"></i>Découvrir les produits
            </a>
        </div>
    }
    else
    {
        <!-- Wishlist Count -->
        <div class="wishlist-count mb-4">
            <span class="badge bg-danger">
                <i class="fas fa-heart me-2"></i>@Model.Count() produit(s) dans votre liste
            </span>
        </div>

        <!-- Wishlist Products Grid -->
        <div class="products-grid">
            @foreach (var product in Model)
            {
                var photoPath = "~/images/" + (product.Image ?? "noimage.jpg");

                <div class="product-card wishlist-product-card" data-product-id="@product.ProductId">
                    <!-- Remove from Wishlist Button -->
                    <button class="wishlist-btn-card active"
                            data-product-id="@product.ProductId"
                            onclick="toggleWishlist(this)">
                        <i class="fas fa-heart"></i>
                    </button>

                    <!-- Product Image -->
                    <img src="@photoPath" asp-append-version="true" alt="@product.Name" />

                    <!-- Product Details -->
                    <div class="card-body">
                        <h5>@product.Name</h5>
                        <p class="text-muted mb-2">
                            <i class="fas fa-tag me-1"></i>@product.Category?.CategoryName
                        </p>

                        <div class="product-info mb-3">
                            <span class="badge bg-info">
                                <i class="fas fa-boxes me-1"></i>Stock: @product.QteStock
                            </span>
                        </div>

                        <div class="price mb-3">@product.Price DT</div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                               class="btn btn-primary flex-grow-1">
                                <i class="fas fa-eye me-1"></i>Voir
                            </a>
                            <a asp-controller="Panier" asp-action="AddProduct" asp-route-id="@product.ProductId"
                               class="btn btn-outline-secondary flex-grow-1">
                                <i class="fas fa-cart-plus me-1"></i>Panier
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleWishlist(button) {
            const productId = button.getAttribute('data-product-id');
            const card = button.closest('.wishlist-product-card');

            console.log('Removing from wishlist:', productId);

            // Confirmation before removing
            if (!confirm('Voulez-vous retirer ce produit de votre liste de souhaits ?')) {
                return;
            }

            // Send AJAX request
            fetch('/Wishlist/ToggleWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ productId: parseInt(productId) })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Animate card removal
                    card.style.opacity = '0';
                    card.style.transform = 'scale(0.8)';
                    card.style.transition = 'all 0.3s ease';

                    setTimeout(() => {
                        card.remove();

                        // Check if wishlist is now empty
                        const remainingCards = document.querySelectorAll('.wishlist-product-card');
                        if (remainingCards.length === 0) {
                            location.reload();
                        } else {
                            // Update count
                            const countBadge = document.querySelector('.wishlist-count .badge');
                            if (countBadge) {
                                const newCount = remainingCards.length;
                                countBadge.innerHTML = `<i class="fas fa-heart me-2"></i>${newCount} produit(s) dans votre liste`;
                            }
                        }
                    }, 300);
                } else {
                    alert('Erreur: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Erreur de connexion. Veuillez réessayer.');
            });
        }
    </script>
}